<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        tools:context=".MainActivity"
    android:gravity="start">

    <!-- Dummy UI for now -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:background="#bd0000"
        android:layout_gravity="center"
        android:layout_weight="0.25">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/column1_label"
            style="@style/ColumnLabelStyle"
            android:layout_weight="0.05" />
        <fragment
            android:id="@+id/column1"
            android:name="vcx.myapplication.TaskListFragment"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            tools:layout="@android:layout/simple_list_item_1"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:background="#f1a100"
        android:layout_weight="0.25">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/column2_label"
            style="@style/ColumnLabelStyle"
            android:layout_weight="0.05" />
        <fragment
            android:id="@+id/column2"
            android:name="vcx.myapplication.TaskListFragment"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            tools:layout="@android:layout/simple_list_item_1"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:background="#00b2e3"
        android:layout_weight="0.25">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/column3_label"
            style="@style/ColumnLabelStyle"
            android:layout_weight="0.05" />
        <fragment
            android:id="@+id/column3"
            android:name="vcx.myapplication.TaskListFragment"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            tools:layout="@android:layout/simple_list_item_1"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:background="#009451"
        android:layout_weight="0.25">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/column4_label"
            style="@style/ColumnLabelStyle"
            android:layout_weight="0.05" />
        <fragment
            android:id="@+id/column4"
            android:name="vcx.myapplication.TaskListFragment"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            tools:layout="@android:layout/simple_list_item_1"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>
