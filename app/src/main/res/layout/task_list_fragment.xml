<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp">

    <TextView
        android:id="@+id/task_title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/foreground_material_light"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:padding="@dimen/abc_control_padding_material" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/task_id_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/background_material_dark"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:padding="@dimen/abc_button_padding_horizontal_material" />

        <TextView
            android:id="@+id/task_user_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dim_foreground_material_light"
            style="@style/Base.TextAppearance.AppCompat.Medium" />

    </LinearLayout>

</LinearLayout>